#自定义服务名配置和要访问的url前缀
server:
  port: 9000
spring:
  application:
    name: zuul9000
  #处理中文乱码
  http:
    encoding:
      charset: UTF-8
      enabled: true
      force: true
  boot:
    admin:
      client:
        url: http://localhost:8769
eureka:
  instance:
    leaseRenewalIntervalInSeconds: 10
    health-check-url-path: /actuator/health
    hostname: localhost
    instance-id: online-taxi-zuul-9000
  client:
    registryFetchIntervalSeconds: 5
    service-url:
      defaultZone: ${EUREKA_SERVICE_URL:http://discovery1:8761}/eureka/

#商品服务路由
zuul:
  routes:
      #此处名字随便取
      consumer-server:
        path: /zuul-consumerServer/**
        #具体服务的地址，没有eureka可以这样用-这个key是url
        url: http://localhost:8080

#springboot-admin
management:
  endpoints:
    web:
      exposure:
        include: "*"
  endpoint:
    health:
      show-details: ALWAYS
